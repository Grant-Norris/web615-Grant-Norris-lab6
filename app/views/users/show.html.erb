<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-success">
      <div class="panel-heading">
        User
      </div>

      <div class="panel-body">
        <p>
          <strong>User:</strong>
          <%= @user.email %>
        </p>
      </div>

      <h1>Comments</h1>
    </div>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Comment</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @user.comments.order(created_at: :desc).each do |comment| %>
        <tr>
          <td><%= comment.message %></td>
          <td><%= link_to 'Show', comment %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Article</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @user.articles.order(created_at: :desc).each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= link_to 'Show', article %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

      <div class="panel-footer">
        <%= link_to 'Back', user_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
